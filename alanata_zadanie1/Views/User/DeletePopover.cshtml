@model int?

<div id="deletePopoverContent-@Model" class="d-none">
    @using (Html.BeginForm("Delete", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model"/>
        <button type="submit" class="btn btn-sm btn-danger text-black">@TextResources.Confirm</button>
        <button type="button" class="btn btn-sm btn-secondary text-black" onclick="hidePop(this)">@TextResources.Cancel</button>
    }
</div>